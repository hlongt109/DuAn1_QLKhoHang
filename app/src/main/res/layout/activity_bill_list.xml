<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activitiesManagementScreen.BillListActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/bill_management"
        app:titleTextColor="#331139"
        android:background="#76A5CC"
        android:id="@+id/toolbar_Bill"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/toolbar_Bill">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c6dde7"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/toolbar_User"
            android:id="@+id/rcv_bills"/>
    </LinearLayout>
</RelativeLayout>