<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6dde7"
    tools:context=".Activities.activitiesCreate.CreateUserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/topView"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_view_topleft"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create User"
            android:textSize="30sp"
            android:textColor="#3D4363"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@id/title">
            <ImageView
                android:id="@+id/imgUser_create"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/khung"
                android:src="@drawable/img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Choose image "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/linearlayout2"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_UserName_create"
                android:layout_below="@id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:hint="Username"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/baseline_person_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edUserName_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_Pass_create"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/baseline_key_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPass_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_PhoneNumber_create"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPhoneNumber_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_Position_create"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/position">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPosition_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_Profile_create"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Profile"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_note">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edProfile_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:layout_width="120dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#7A156C73"
            android:layout_below="@id/linearlayout"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/saveas"
            android:textColor="#202020"
            android:text="Save"
            android:textStyle="bold"
            android:id="@+id/btnSave_User_create"/>
        <Button
            android:layout_width="120dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#7A156C73"
            android:layout_below="@id/linearlayout"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textColor="#202020"
            android:drawableLeft="@drawable/ic_cancel"
            android:text="Exit"
            android:textStyle="bold"
            android:id="@+id/btnExit_User_create"/>

    </RelativeLayout>

</ScrollView>