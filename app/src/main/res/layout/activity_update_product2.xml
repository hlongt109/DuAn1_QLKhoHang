<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c6dde7"
    tools:context=".Activities.activitiesCreate.CreateProduct_Activity">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_view2"
        android:id="@+id/topView"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img"
        android:id="@+id/img_UpdateProduct"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Product"
        android:textColor="#568CA5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/img_UpdateProduct"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_updateID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:startIconDrawable="@drawable/edit"
        android:layout_below="@id/img_UpdateProduct"
        app:boxBackgroundColor="#6F43778E"
        android:layout_marginTop="60dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_updateaddID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="20dp"
            android:hint="ID"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_updateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/name"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/in_updateID"
        app:boxBackgroundColor="#6F43778E"
        android:layout_marginTop="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_updateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="20dp"
            android:hint="Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_updateQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/quantity"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/in_updateName"
        app:boxBackgroundColor="#6F43778E"
        android:layout_marginTop="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_updateQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="20dp"
            android:hint="Quantity"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_updatePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/money"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/in_updateQuantity"
        app:boxBackgroundColor="#6F43778E"
        android:layout_marginTop="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_updatePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="20dp"
            android:hint="Price"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Product"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="80dp"
        android:layout_below="@id/in_updatePrice"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7A3E8288"
        android:drawableLeft="@drawable/saveas"
        android:id="@+id/update_Product"/>

    <View
        android:layout_below="@+id/update_Product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_view1"/>

</RelativeLayout>
